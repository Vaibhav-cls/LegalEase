<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/signup.css" />
    <link rel="stylesheet" href="/css/providerForm.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <title>Sign Up</title>
  </head>
  <body>
    <div class="outer-container">
      <div class="outer-child-container">
        <div class="left-section">
          <div class="welcome-card">
            <div class="logo-container">
              <img
                src="https://res.cloudinary.com/djzomy8vf/image/upload/v1723018397/sitelog_tmaldf.png"
                alt="logo.png"
              />
            </div>
            <div class="logo-heading">
              <div class="inner-block" style="text-align: left">
                <h2>Sign Up</h2>
                <p class="tagline">Tell us more about you</p>
              </div>
            </div>
          </div>
          <div class="steps" id="steps-container">
            <p class="step">1</p>
            <p id="step-2" class="step active-step">2</p>
          </div>
        </div>
        <div class="right-section">
          <div class="login-form-parent-container">
            <div class="login-form-child-container">
              <form
                id="details-form"
                method="POST"
                action="/signup/client/<%= id %>"
              >
                <div class="field">
                  <textarea name="bio" placeholder=" " required></textarea>
                  <label for="bio">
                    Write a good introduction of yourself...</label
                  >
                </div>

                <div class="field-row">
                  <div class="field">
                    <input
                      type="text"
                      name="location[state]"
                      placeholder=" "
                      autocomplete="state"
                      required
                    />
                    <label for="state"> State</label>
                  </div>
                  <div class="field">
                    <input
                      type="text"
                      name="location[city]"
                      placeholder=" "
                      autocomplete="city"
                      required
                    />
                    <label for="city"> City</label>
                  </div>
                </div>
                <div class="field-row">
                  <div class="field">
                    <input
                      type="text"
                      name="location[country]"
                      placeholder=" "
                      autocomplete="country"
                      required
                    />
                    <label for="country"> Country</label>
                  </div>
                  <div class="field">
                    <input
                      type="number"
                      name="location[pincode]"
                      placeholder=" "
                      autocomplete="email"
                      required
                    />
                    <label for="pincode"> Pincode</label>
                  </div>
                </div>
                <button class="btn btn-1">
                  Sign Up <i class="fa-solid fa-right-to-bracket"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const step3 = document.getElementById("step-3");
        const step2 = document.getElementById("step-2");
        const newWidth = 100 + "%";
        document
          .querySelector(".steps")
          .style.setProperty("--progress-width", newWidth);
      });
    </script>
  </body>
</html>
