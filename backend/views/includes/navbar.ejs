<!-- First Navbar: top_head -->
<div class="top_head">
  <div class="head-container">
    <div class="topleft">
      <span class="social-media">
        <a href="#"><i class="fa-brands fa-square-facebook"></i></a>
        <a href="#"><i class="fa-brands fa-x-twitter"></i></a>
      </span>
    </div>
    <div class="topright d-flex align-items-center justify-content-between">
      <a href="#main" class="skip border-">Skip to main content</a>
      <a href="/homepage" class="skip border-">Home</a>
      <a href="/marketplace" class="skip border-">Marketplace</a>
      <%if(currUser.user_type == "client"){%>
      <a href="/client/dashboard/<%=currUser._id%>" class="skip border-">Dashboard</a>
      <%}else if(currUser.user_type == "provider"){%>
        <a href="/provider/dashboard/<%=currUser._id%>" class="skip border-">Dashboard</a>
      <%}%>
      <%if(!currUser){%>
        <a href="/login" class="login">Log In</a>
        <a href="/signup" class="login">Sign Up</a>
      <%}else{%>
        <a href="/logout" class="logout">Log Out</a>
      <%}%>
      <span class="sizechanger">
        <a href="#" class="text_size_decrease changer" onclick="Decrease()"
          >-A</a
        >
        <a href="#" class="text_size_reset changer" onclick="Reset()">A</a>
        <a href="#" class="text_size_increase changer" onclick="Increase()"
          >+A</a
        >
      </span>
      <a href="#" class="languagechanger" onclick="Language()">हिन्दी</a>
    </div>
  </div>
</div>

<!-- Second Navbar: top_middle -->
