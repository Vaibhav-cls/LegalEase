  <div class="nav-container d-flex justify-content-between align-items-center">
    <span class="Site-logo"
      ><img
        src="https://res.cloudinary.com/djzomy8vf/image/upload/v1723018397/sitelog_tmaldf.png"
    /></span>
    <span class="moto">
      <h1 id="moto-text"></h1>
    </span>
  </div>
</div>
