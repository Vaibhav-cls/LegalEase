<% layout("/layouts/boilerplate") -%> 
<div style="padding: 0px 50px">
<% if(q) {%>
<p class="result-text">Showing results for:- <%=q%></p>
<% }else {%>
<p class="result-text">Showing results for:- All(*)</p>
<% } %>
<div class="card-container" id="main">
  <% for(p of providers) {%> <%if(p.user.user_type=="provider") {%>
  <div
    class="provider-card"
    style="background-image: url('<%= p.user.image.url %>')"
  >
    <div class="card-overlay">
      <div class="upper-part">
        <h2 class="heading"><%=p.user.first_name%> <%=p.user.last_name%></h2>
        <p class="address">
          <%=p.location.city%>, <%=p.location.state%>, <%=p.location.country%>
        </p>
        <p class="tag-head">Tags</p>
        <div class="tags">
          <% for(let i=0;i<p.tags.length;i++) { var count=0%>
            <%if(count<=3){%>
              <div class="tag"><%=p.tags[i].name%></div>
            <%count+=1 }%>
          
          <% } %>
        </div>
        <div class="bottom-panel">
          <div class="section">
            <p>#4</p>
            <p>Rank</p>
          </div>
          <div class="section">
            <p>200+</p>
            <p>Happy Clients</p>
          </div>
          <div class="section">
            <p><%=p.reviews.length%></p>
            <p>Reviews</p>
          </div>
        </div>
      </div>
      <div class="hidden">
        <h6>About</h6>
        <p class="abt-txt"><%=p.bio%></p>
        <p>Experience: <%=p.experience%></p>
        <p>Age 25 years</p>
        <p>Username: <%=p.user.username%></p>
        <p>Joined on: 13-July-2024</p>
      </div>
      <h6 class="badge-head">Badge</h6>
      <div class="badge">
        <i class="fa-solid fa-certificate"></i>
        <i class="fa-solid fa-certificate"></i>
        <i class="fa-solid fa-certificate"></i>
        <i class="fa-solid fa-certificate"></i>
      </div>
      <div class="links">
        <a href="/provider/dashboard/<%=p.user._id%>" class="visit">Visit Profile</a>
        <a class="chat"> Chat <i class="fa-solid fa-comment-dots"></i> </a>
      </div>
    </div>
  </div>
  <% } %> <% } %>
</div>
</div>



