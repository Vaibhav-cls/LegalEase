<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/signup.css" />
    <link rel="stylesheet" href="/css/signup1.css" />
    <script>
      const allTags = <%- JSON.stringify(allTags) %>;
    </script>
    <title>LegalEase - Sign Up</title>
  </head>
  <body>
    <div class="container">
      <form id="details-form" method="POST" action="/signup/provider/<%= id %>">
        <section class="sign-up-part-2">
          <div class="login-box">
            <div class="logo">
              <img
                src="https://github.com/Kas-Sai/testing/blob/main/New%20folder/sitelog.png?raw=true"
                alt="Logo"
              />
            </div>
            <h3>Sign Up</h3>
            <div class="form-container">
              <div class="form-group">
                <label for="about">About</label>
                <textarea
                  class="input-field textarea-field"
                  id="about"
                  name="bio"
                  placeholder="Write a good introduction of yourself..."
                ></textarea>
              </div>

              <div class="form-group">
                <label for="experience">Experience</label>
                <input
                  type="number"
                  class="input-field"
                  name="experience"
                  id="experience"
                  placeholder="Experience (in year)"
                />
              </div>

              <div class="location-group">
                <div class="form-group">
                  <label for="country">Country</label>
                  <input
                    type="text"
                    class="input-field"
                    name="location[country]"
                    id="country"
                    placeholder="Country"
                  />
                </div>
                <div class="form-group">
                  <label for="state">State</label>
                  <input
                    type="text"
                    class="input-field"
                    name="location[state]"
                    id="state"
                    placeholder="State"
                  />
                </div>
                <div class="form-group">
                  <label for="city">City</label>
                  <input
                    type="text"
                    class="input-field"
                    name="location[city]"
                    id="city"
                    placeholder="City"
                  />
                </div>
                <div class="form-group">
                  <label for="pincode">Pincode</label>
                  <input
                    type="text"
                    class="input-field"
                    id="pincode"
                    name="location[pincode]"
                    placeholder="Pincode"
                  />
                </div>
              </div>

              <button type="button" class="next-btn" id="next">Next</button>
            </div>
          </div>
        </section>
        <section class="sign-up-part-3">
          <div class="login-box">
            <div class="logo">
              <img
                src="https://github.com/Kas-Sai/testing/blob/main/New%20folder/sitelog.png?raw=true"
                alt="Logo"
              />
            </div>
            <h3>Sign Up</h3>
            <div class="container-page3">
              <div class="input-group-page3">
                <label for="tag">Create</label>
                <input
                  type="text"
                  id="name"
                  class="field-input"
                  placeholder="Enter a tag name here"
                />
                <button class="add-skill-btn" type="button" id="add">
                  Add
                </button>
              </div>

              <div class="tag-section">
                <div class="chosen-tags">
                  <p>Chosen Tags:</p>
                  <div id="added-tags" class="tag-list"></div>
                </div>
                <div class="separator"></div>
                <div class="option-tags">
                  <p>Available Tags:</p>
                  <div class="tag-list" id="existing-tags"></div>
                </div>
              </div>
              <input type="hidden" name="selectedTags" id="selectedTags" />
              <button class="register-btn">Sign Up</button>
            </div>
          </div>
        </section>
      </form>
      <div class="prev prev-part3">
        <i class="fa-solid fa-circle-left"></i>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="/js/main.js"></script> -->
    <script src="/js/signup2.js"></script>
  </body>
</html>
